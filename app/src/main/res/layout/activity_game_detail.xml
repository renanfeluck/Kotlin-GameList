<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pages.GameDetail">

    <TextView
            android:text="5"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNota3"
            app:layout_constraintStart_toEndOf="@+id/star5"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>
    <TextView
            android:text="A nova pÃ¡gina foi criada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imgGame"
            android:src="@drawable/img_godofwar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star1"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toRightOf="@+id/imgGame"
            tools:ignore="VectorDrawableCompat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star1"
            tools:ignore="VectorDrawableCompat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star3"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@+id/star2"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star3"
            tools:ignore="VectorDrawableCompat" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star5"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@+id/star4"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"/>
    <TextView
            android:text="@string/descr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDescription"
            android:background="@drawable/textbackborder"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imgGame"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <TextView
            android:text="@string/designers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDesigners"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="@string/developers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDevelopers"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textDesigners"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />
    <TextView
            android:text="@string/Genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGenres"
            app:layout_constraintTop_toBottomOf="@+id/textDevelopers"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"/>
    <TextView
            android:text="@string/publishers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPublishers"
            app:layout_constraintTop_toBottomOf="@+id/textGenres"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>