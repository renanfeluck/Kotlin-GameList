<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
>

    <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renan_felipe_luckow"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgGame"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.281"/>


    <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/imgGame"
            android:src="@drawable/img_godofwar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imgGame"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star2"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star1"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star3"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star2"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star4"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_star_open"
            android:id="@+id/star5"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/star4"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="VectorDrawableCompat"/>

    <TextView
            android:text="Aventura"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCategoria"
            app:layout_constraintTop_toBottomOf="@+id/firstName"
            app:layout_constraintLeft_toRightOf="@id/imgGame"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>

    <TextView
            android:text="5"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNota"
            app:layout_constraintStart_toEndOf="@+id/star5"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>